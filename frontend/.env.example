# ===========================================
# HandyWriterz Frontend - .env.example (sanitized)
# ===========================================

# Only expose public variables here. Never put secrets in the frontend .env files.

# App
NEXT_PUBLIC_APP_NAME=HandyWriterz
NEXT_PUBLIC_NODE_ENV=production

# Backend API
# For Next.js API routes proxying to backend, set BACKEND_URL here.
BACKEND_URL=http://localhost:8000
# Optional public base (used server-side); browser requests use relative paths via Next API routes
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Auth (Dynamic.xyz)
NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID=0ceb833c-f73e-4ba9-ab3f-4b749a88340e
NEXT_PUBLIC_DYNAMIC_PUBLIC_KEY=https://app.dynamic.xyz/api/v0/sdk/0ceb833c-f73e-4ba9-ab3f-4b749a88340e/.well-known/jwks

# Payments (public keys only)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_293cd2139ea086618bc469a1d7d1ff893c9c9dc4

# Analytics / Monitoring (public)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_SENTRY_DSN=

# US Cloud (default)
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
# EU Cloud
# NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# Feature flags (public)
NEXT_PUBLIC_ENABLE_SSE=true
NEXT_PUBLIC_ENABLE_CHAT_ROUTER=true

# Optional UI
NEXT_PUBLIC_DEFAULT_LOCALE=en-US

# Tooling
NEXT_TELEMETRY_DISABLED=1
DISABLE_OPENCOLLECTIVE=true
