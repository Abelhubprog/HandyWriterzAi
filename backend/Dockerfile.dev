# Dev image for HandyWriterz backend (CPU-only)
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Preinstall dev dependencies to speed up reload cycles
COPY requirements_cpu.txt /tmp/requirements_cpu.txt
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r /tmp/requirements_cpu.txt

# Mount code at runtime; use uvicorn reload in compose
EXPOSE 8000
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

